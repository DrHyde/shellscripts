#!/bin/sh

GET=/usr/local/bin/GET
R2E=/usr/bin/r2e

for i in `$GET http://rt.cpan.org/?user=$RTUSER\&pass=$RTPASS|grep Dist/Display.html\?Status=Active|sed 's/.*Queue=//;s/".*//'`; do
    if (! $R2E list|grep rt.cpan.org.*$i>/dev/null) ; then
        echo Adding RSS feed for $i on rt.cpan.org
        $R2E add "http://rt.cpan.org/Search/Results.rdf?user=$RTUSER\&pass=$RTPASS\&Query=Queue = \'$i\' AND \( Status = \'new\' OR Status = \'open\' OR Status = \'stalled\' \)"
        exit
    fi
done
